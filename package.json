{
  "name": "tsconline-monorepo",
  "dependencies": {
    "canvas": "^2.11.2",
    "fastify": "^4.17.0"
  },
  "devDependencies": {
    "@types/eslint": "^8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.28",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@yarnpkg/sdks": "^3.0.0-rc.43",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-check-file": "^2.7.1",
    "eslint-plugin-react": "^7.33.2",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "syncpack": "^12.3.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "5.2.2"
  },
  "packageManager": "yarn@4.0.2",
  "private": true,
  "scripts": {
    "build": "echo \"Cleaning all workspaces...\" && yarn clean && echo \"Building all workspaces...\" && yarn workspace @tsconline/shared run build && echo \"@tsconline/shared successfully built... \" && yarn workspaces foreach -A --exclude @tsconline/shared --exclude tsconline/mono-repo run build",
    "check-quality": "yarn prettier-format && yarn lint-check",
    "install": "echo \"Installing packages of all workspaces...\" && yarn workspaces foreach -A --exclude @tsconline/shared --exclude tsconline/mono-repo -p -v run install",
    "lint-check": "yarn eslint **/*.{tsx,ts} --quiet --config ./.eslintrc.json --no-cache",
    "lint-format": "yarn eslint **/*.{tsx,ts} --fix --quiet --config ./.eslintrc.json",
    "prettier-check": "prettier --check \"**/*.{ts,tsx,css}\"",
    "prettier-format": "prettier --write \"**/*.{ts,tsx,css}\"",
    "setup": "yarn && yarn install && yarn build",
    "start": "yarn workspace @tsconline/server start",
    "test": "jest -t",
    "test-all": "jest",
    "test-clear-cache": "jest --clearCache",
    "clean": "yarn workspaces foreach -A --parallel run clean"
  },
  "workspaces": [
    "app",
    "shared",
    "server"
  ]
}
